{
  "name": "waste-wizards-nl",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "rm -rf dist node_modules/.vite && vite build && npm run copy-assets",
    "copy-assets": "cp shootwaste.html game-music-loop-3-144252.mp3 short-game-music-loop-38898.mp3 dist/ && cp -r images_selected dist/",
    "preview": "vite preview",
    "deploy": "firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions",
    "node-check": "node --version && echo 'Firebase CLI:' && firebase --version",
    "nvm-deploy": "nvm use 20 && firebase deploy --only hosting"
  },
  "dependencies": {
    "@google/genai": "^1.24.0",
    "firebase": "^11.10.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
